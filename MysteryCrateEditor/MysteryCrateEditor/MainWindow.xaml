<Window x:Class="MysteryCrateEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MysteryCrateEditor"
        mc:Ignorable="d"
        Title="Crate Editor" Height="430.919" Width="790.181" Foreground="White">
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FBFBFF">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="280*"/>
            <ColumnDefinition Width="280*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Background="#040F16">
            <ListBox x:Name="CrateList" Background="Transparent" VerticalAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel DataContext="{Binding}" Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel Background="#0B4F6C" x:Name="CratePanel" Grid.Column="1" DataContext="{Binding SelectedValue, ElementName=CrateList}">
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding Name}"/>
            <Grid>
                <TextBlock Text="Rewards:"/>
                <Button HorizontalAlignment="Right" Click="AddNewReward" Content="Add new"/>
            </Grid>
            <ListBox Background="Transparent" ItemsSource="{Binding Rewards}" x:Name="RewardsListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel x:Name="RewardPanel" Grid.Column="2" Background="#01BAEF" DataContext="{Binding SelectedValue, ElementName=RewardsListBox}">
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding Name}"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Command" Click="NewCommand"/>
                <Button Content="Item" Click="NewItem"/>
                <Button Content="Display" Click="Display"/>
            </StackPanel>
            <ListBox x:Name="RewardTagsBox" ItemsSource="{Binding RewardTags}" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel HorizontalAlignment="Stretch">
                            <TextBlock Text="{Binding TagName}"/>
                            <TextBox Text="{Binding Command}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Grid.Row="1">
            <Button Content="Save All" HorizontalAlignment="Right" Click="SaveAll_Click" />
            <Button x:Name="Button" Content="Add New Crate" Width="Auto" Click="AddCrate"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Save Crate" Click="SaveCrate"/>
            <Button Content="Delete Crate" Click="DeleteCrate"/>
        </StackPanel>
    </Grid>
</Window>
